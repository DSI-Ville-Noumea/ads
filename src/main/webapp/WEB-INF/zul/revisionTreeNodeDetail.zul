<zk>
	<grid apply="org.zkoss.bind.BindComposer" height="100%" style="border: none; padding: 5px;"
		viewModel="@id('vmNodeDetail') @init('nc.noumea.mairie.ads.viewModel.RevisionTreeNodeDetailViewModel')">
		<columns>
			<column label="ParamÃ¨tre" width="120px" />
			<column label="Valeur" />
		</columns>
		<rows>
			<row>
				<label value="ID service" />
				<textbox
					value="@bind(vmNodeDetail.selectedNoeud.idService)" width="100%"
					disabled="true" />
			</row>
			<row>
				<label value="Sigle" />
				<textbox value="@bind(vmNodeDetail.selectedNoeud.sigle)"
					width="100%" />
			</row>
			<row>
				<label value="Label" />
				<textbox value="@bind(vmNodeDetail.selectedNoeud.label)"
					width="100%" />
			</row>
			<row>
				<label value="Type" />
				<div>
					<combobox
						model="@bind(vmNodeDetail.dataList)"
						selectedItem="@bind(vmNodeDetail.selectedType)">
						<template name="model">
							<comboitem label="${each.label}" />
						</template>
					</combobox>
					<button class="icon-plus" onClick="@command('createNewTypeCommand')" />
				</div>
			</row>
			<row>
				<label value="Code SISERV" />
				<textbox
					value="@bind(vmNodeDetail.selectedNoeud.codeServi)" width="100%" />
			</row>
		</rows>
	</grid>

</zk>